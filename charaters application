<body>
    <div class="container">
        <div class="card">
            <h1><span class="emoji">âœ¨</span>Character Counter</h1>
            
            <label for="nameInput">Enter Your Name:</label>
            <input 
                type="text" 
                id="nameInput" 
                placeholder="Hello world"
                value="Hello world"
            >
            
            <button id="countBtn">Count Characters</button>
            
            <div class="result" id="result">
                <p><strong>Input:</strong></p>
                <p class="input-display" id="inputDisplay"></p>
                <div class="count-line">
                    <p><strong>Character Count:</strong></p>
                    <span class="count-badge" id="charCount">0</span>
                </div>
                <p class="success-msg" id="successMsg"></p>
            </div>
        </div>
    </div>

    <script>
        // Get elements
        const nameInput = document.getElementById('nameInput');
        const countBtn = document.getElementById('countBtn');
        const result = document.getElementById('result');
        const inputDisplay = document.getElementById('inputDisplay');
        const charCount = document.getElementById('charCount');
        const successMsg = document.getElementById('successMsg');

        // Count characters function
        function countCharacters() {
            const inputValue = nameInput.value;
            const characterCount = inputValue.length;
            
            // Show result section
            result.classList.add('show');
            
            // Display the input text
            inputDisplay.textContent = inputValue || '(empty)';
            
            // Update character count
            charCount.textContent = characterCount;
            
            // Show success message
            if (characterCount > 0) {
                successMsg.textContent = 'Character count successful!';
            } else {
                successMsg.textContent = 'Please enter some text!';
            }
        }

        // Event listener for button click
        countBtn.addEventListener('click', countCharacters);

        // Optional: Count on Enter key press
        nameInput.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                countCharacters();
            }
        });

        // Optional: Real-time counting as you type
        nameInput.addEventListener('input', function() {
            if (result.classList.contains('show')) {
                countCharacters();
            }
        });
    </script>
</body>
